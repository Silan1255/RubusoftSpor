<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarSportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="Ana sayfa"
                android:textColor="#1E3347"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                style="@style/SpinnerTheme"
                android:spinnerMode="dropdown"
                android:textAlignment="inherit"/>

        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/txt_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAÅžLA"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout" />

    <TextView
        android:id="@+id/port1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PORT1"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/txt_sport"
        app:layout_constraintRight_toLeftOf="@+id/port2"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout" />

    <TextView
        android:id="@+id/port2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PORT2"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/port1"
        app:layout_constraintRight_toLeftOf="@+id/port3"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout" />

    <TextView
        android:id="@+id/port3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PORT3"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/port2"
        app:layout_constraintRight_toLeftOf="@+id/port4"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout" />

    <TextView
        android:id="@+id/port4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PORT4"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/port3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>