<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AyarlarFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarSportLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Ana sayfa"
            android:textColor="#1E3347"
            android:textSize="16dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:entries="@array/country_arrays"
        android:padding="8dp"
        android:prompt="@string/country_prompt"

        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reload"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout1" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="110dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:entries="@array/country_arrays"
        android:prompt="@string/country_prompt"
        app:layout_constraintLeft_toRightOf="@+id/btn_reload"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_connect"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/appBarSportLayout1"/>
</FrameLayout>